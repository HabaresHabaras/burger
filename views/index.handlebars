<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="card" style="width: 35rem; height: 43rem; margin-top: 5rem; margin-bottom: 10rem">
        <img class="card-img-top" src="https://media.giphy.com/media/KIJAvs9u2i2Ri/giphy.gif" style="width:35rem; height: 18rem;"
          alt="Card image cap">
        <div class="card-body">
          <h1 class="card-title">Welcome to the krusty Krab!</h1>
          <p class="card-text">What would you like to order?</p>
          <form class="create-form">

            <div class="form-group">
              <label for="cat">Burger Name:</label>
              <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
              <label for="slee">Are you eating in?</label>
              <br>
              <input type="radio" name="devoured" value="0" checked> Eat in
              <br>
              <input type="radio" name="devoured" value="1"> Takeout
            </div>

            <button type="submit">Add Order</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card" style="width: 35rem; height: 55rem; margin-top: 5rem; margin-bottom: 10rem; margin-left: 3rem">
        <img class="card-img-top" src="https://media.giphy.com/media/3ogwFMrgMHpxobrhh6/giphy.gif" style="width:35rem; height: 18rem;"
          alt="Card image cap">
        <div class="card-body">
          <h1 class="card-title">Burgers: </h1>
          <h2>Orders: </h2>

          <ul>
            {{#each burgers}} {{#unless devoured}} {{> block/burgers-BLOCK devoured=true}} {{/unless}} {{/each}}
          </ul>

          <h2>Past Orders: </h2>

          <ul>
            {{#each burgers}} {{#if devoured}} {{> block/burgers-BLOCK devoured=false}} {{/if}} {{/each}}
          </ul>

        </div>
      </div>
    </div>
  </div>

</div>
